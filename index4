    <script>
        const workflowStages = [
            {
                id: 'import',
                name: 'Import',
                color: 'blue',
                icon: '<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor"><path d="M8 3a1 1 0 011-1h2a1 1 0 110 2H9a1 1 0 01-1-1z" /><path d="M6 3a2 2 0 00-2 2v11a2 2 0 002 2h8a2 2 0 002-2V5a2 2 0 00-2-2 3 3 0 01-3 3H9a3 3 0 01-3-3z" /></svg>',
                packages: 'readr::read_csv(), data.table::fread(), DBI',
                why: 'Fast ingest of CSVs and database tables into tidy data frames.'
            },
            {
                id: 'wrangle',
                name: 'Wrangle',
                color: 'purple',
                icon: '<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor"><path d="M5 4a1 1 0 00-2 0v7.268a2 2 0 000 3.464V16a1 1 0 102 0v-1.268a2 2 0 000-3.464V4zM11 4a1 1 0 10-2 0v1.268a2 2 0 000 3.464V16a1 1 0 102 0V8.732a2 2 0 000-3.464V4zM16 3a1 1 0 011 1v7.268a2 2 0 010 3.464V16a1 1 0 11-2 0v-1.268a2 2 0 010-3.464V4a1 1 0 011-1z" /></svg>',
                packages: 'dplyr, the pipe `%>%`, tidyr::pivot_*()',
                why: 'Human-readable verbs (filter, mutate) for reproducible transforms.'
            },
            {
                id: 'visualise',
                name: 'Visualise',
                color: 'teal',
                icon: '<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor"><path d="M2 10a8 8 0 018-8v8h8a8 8 0 11-16 0z" /><path d="M12 2.252A8.014 8.014 0 0117.748 8H12V2.252z" /></svg>',
                packages: 'ggplot2, patchwork, basic plotly',
                why: 'Grammar of Graphics for publication-quality and interactive charts.'
            },
            {
                id: 'model',
                name: 'Model',
                color: 'orange',
                icon: '<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-1.584 1.95a1.532 1.532 0 01-.947 2.287c-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 1.95 1.584a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.532 1.532 0 012.287-.947c1.372.836 2.942-.734 1.584-1.95a1.532 1.532 0 01.947-2.287c1.561-.379-1.561 2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-1.95-1.584A1.532 1.532 0 0111.49 3.17zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd" /></svg>',
                packages: 'base stats, caret, tidymodels, forecast, vars',
                why: 'Unified syntax for regression, ML, and time-series.'
            },
            {
                id: 'scale',
                name: 'Scale',
                color: 'red',
                icon: '<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor"><path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" /></svg>',
                packages: 'arrow, sparklyr, data.table',
                why: 'Work with Parquet, Spark, and on-disk analytics without leaving RStudio.'
            },
            {
                id: 'share',
                name: 'Share',
                color: 'green',
                icon: '<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor"><path d="M15 8a3 3 0 10-2.977-2.63l-4.94 2.47a3 3 0 100 4.319l4.94 2.47a3 3 0 10.895-1.789l-4.94-2.47a3.027 3.027 0 000-.74l4.94-2.47C13.456 7.68 14.19 8 15 8z" /></svg>',
                packages: 'Quarto / R Markdown, Shiny, renv',
                why: 'Turn code into HTML/PDF reports, dashboards, & lock package versions.'
            }
        ];

        let activeStageId = 'import';

        const stageButtonsContainer = document.getElementById('stage-buttons');
        const detailsPanel = document.getElementById('details-panel');

        function renderButtons() {
            stageButtonsContainer.innerHTML = '';
            workflowStages.forEach(stage => {
                const isActive = stage.id === activeStageId;
                const activeClasses = `bg-${stage.color}-500 text-white shadow-md`;
                const inactiveClasses = `bg-white text-gray-700 hover:bg-gray-200`;
                
                const button = document.createElement('button');
                button.className = `stage-btn flex items-center justify-center text-sm sm:text-base font-semibold p-3 rounded-lg ${isActive ? activeClasses : inactiveClasses}`;
                button.dataset.id = stage.id;
                button.innerHTML = `${stage.icon} ${stage.name}`;

                button.addEventListener('click', () => {
                    activeStageId = stage.id;
                    render();
                });

                stageButtonsContainer.appendChild(button);
            });
        }

        function renderDetails() {
            const stage = workflowStages.find(s => s.id === activeStageId);
            if (!stage) return;

            detailsPanel.innerHTML = `
                <div class="details-content">
                    <div>
                        <h4 class="text-sm font-semibold text-gray-500 uppercase tracking-wider">Core Packages / Concepts</h4>
                        <p class="mt-1 text-lg font-medium text-${stage.color}-700">${stage.packages}</p>
                    </div>
                    <div class="mt-4 pt-4 border-t border-slate-200">
                        <h4 class="text-sm font-semibold text-gray-500 uppercase tracking-wider">Why It Matters</h4>
                        <p class="mt-1 text-gray-700">${stage.why}</p>
                    </div>
                </div>
            `;
        }

        function render() {
            renderButtons();
            renderDetails();
        }

        document.addEventListener('DOMContentLoaded', render);

    </script>
</body>
