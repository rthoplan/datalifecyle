            <!-- Stage Buttons -->
            <div id="stage-buttons" class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-6 gap-2 sm:gap-4 mb-6 bg-slate-100 p-2 rounded-xl">
                <!-- Buttons injected by JS -->
            </div>

            <!-- Details Panel -->
            <div id="details-panel" class="bg-slate-50 p-6 rounded-lg min-h-[150px]">
                <!-- Details injected by JS -->
            </div>
